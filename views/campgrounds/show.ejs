<% layout('layouts/boilerplate')%>

<div class="row mb-3">
  <div class="col-6">
    <div class="card">
      <img
        class="card-img-top"
        src="<%= campground.image %> "
        alt="Card image cap"
      />
      <div class="card-body">
        <h5 class="card-title"><%= campground.title%></h5>
        <p class="card-text"><%= campground.description%></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%=campground.location%></li>
        <li class="list-group-item">&#36;<%=campground.price%></li>
      </ul>
      <% if(campground.user != undefined && campground.user.toString() ===
      currentUser._id.toString()){ %>
      <div class="card-body">
        <a
          class="card-link btn btn-info"
          href="/campgrounds/<%=campground._id%>/edit"
          >Edit
        </a>

        <form
          class="d-inline"
          action="/campgrounds/<%=campground._id%>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
      <%}%>
    </div>
  </div>

  <div class="col-6">
    <form
      action="/campgrounds/<%= campground._id %>/review "
      method="POST"
      novalidate
      class="validated-form"
    >
      <div>
        <label for="review" class="form-label">Review</label>
        <textarea
          class="form-control"
          type="text"
          id="review"
          name="rev[review]"
          required
        ></textarea>
      </div>

      <div>
        <label for="rating" class="form-label"> Rating</label>
        <input
          class="form-control"
          type="number"
          id="rating"
          name="rev[rating]"
          class="form control"
          required
        />
      </div>

      <button class="btn btn-success mt-3">Add review</button>
    </form>

    <hr />

    <% for(const rev of campground.reviews) {%>
    <div class="card mb-3">
      <div class="card-body">
        <p class="card-title">Rating: <%= rev.rating %></p>
        <p class="card-text"><%= rev.review %></p>
        <% if(rev.user != undefined && rev.user.toString() ===
        currentUser._id.toString()){ %>
        <form
          action="/campgrounds/<%= campground._id %>/review/<%= rev._id %>?_method=DELETE"
          method="POST"
        >
          <button class="submit btn btn-danger">Delete</button>
        </form>
        <%}%>
      </div>
    </div>
    <% } %>
  </div>
</div>
