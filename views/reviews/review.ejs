<% layout('layouts/boilerplate')%>
<div class="row">
  <div class="col-6 offset-3">
    <form
      action="/campgrounds/<%= campground._id %>/review "
      method="POST"
      novalidate
      class="validated-form"
    >
      <div>
        <label for="review" class="form-label">Review</label>
        <textarea
          class="form-control"
          type="text"
          id="review"
          name="rev[review]"
          required
        ></textarea>
      </div>

      <div>
        <label for="rating" class="form-label"> Rating</label>
        <input
          class="form-control"
          type="number"
          id="rating"
          name="rev[rating]"
          class="form control"
          required
        />
      </div>

      <button class="btn btn-primary mt-3">Add review</button>
    </form>
  </div>
</div>
